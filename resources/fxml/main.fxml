<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="440.0" prefWidth="380.0" spacing="10.0" styleClass="formsGeneral" stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="200.0" text="Skocko" textAlignment="CENTER">
         <font>
            <Font name="Chiller" size="36.0" />
         </font>
      </Label>
      <Button fx:id="btnNewGame" mnemonicParsing="false" onAction="#startGameAction" prefHeight="60.0" prefWidth="200.0" styleClass="labelsAndButtons" stylesheets="@../css/game.css" text="NOVA IGRA">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
       <Button fx:id="btnInstructions" mnemonicParsing="false" onAction="#viewInstructionsAction" prefHeight="60.0" prefWidth="200.0" styleClass="labelsAndButtons" stylesheets="@../css/game.css" text="UPUTSTVA">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
       <Button fx:id="btnHighscores" mnemonicParsing="false" onAction="#viewHighscoresAction" prefHeight="60.0" prefWidth="200.0" styleClass="labelsAndButtons" stylesheets="@../css/game.css" text="NAJBOLJI REZULTATI">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
      <Button fx:id="btnExit" layoutX="15.0" layoutY="145.0" mnemonicParsing="false" onAction="#closeGameAction" prefHeight="60.0" prefWidth="200.0" styleClass="labelsAndButtons" stylesheets="@../css/game.css" text="IZLAZ">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
